
public class Collatz {

	public static void main(String[] args) {
		System.out.println(naslednjiClen(6));

	}
	/*
	 * funckija naslednji clen vrne naslednje stevilo v Collatzovem zaporedja
	 */
	public static int naslednjiClen(int n) {
		if(n == 1) {
			return(1);
		}else {
			if(n % 2== 0) {
				return(n/2);
			}else {
				return(3*n +1);
			}
		}
	}
	
	

}
